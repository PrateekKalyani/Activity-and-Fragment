<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#fcba03">

    <Button
        android:id="@+id/firstActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:text="First"
        />

    <Button
        android:layout_toRightOf="@id/firstActivityButton"
        android:id="@+id/secondActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:text="Second"
        />

    <Button
        android:id="@+id/thirdActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="39dp"
        android:text="Third"
        android:layout_toRightOf="@id/secondActivityButton"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="50sp"
        android:layout_centerInParent="true"/>

</RelativeLayout>